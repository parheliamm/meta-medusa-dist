[Unit]
Description=wvdial internet dialer service for stromer m2m
After=gsm.service
Requires=gsm.service
PartOf=gsm.service
Wants=network.target

[Service]
Type=simple
ExecStart=/usr/bin/wvdial
ExecStopPost=/bin/systemctl reload gsm.service
Restart=always
RestartSec=30

[Install]
WantedBy=communication.target
