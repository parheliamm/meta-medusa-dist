[Unit]
Description=wvdial internet dialer service
After=gsm.service
Requires=gsm.service
PartOf=gsm.service
Wants=network.target

[Service]
Type=simple
# Wait for some seconds gsm has been started or dial command ATDT*99# will not succeed.
ExecStart=/bin/bash -c "/bin/sleep 30 && /usr/bin/wvdial"
ExecStop=/bin/kill -TERM $MAINPID
Restart=always
RestartSec=5
CPUQuota=5%

[Install]
WantedBy=multi-user.target
