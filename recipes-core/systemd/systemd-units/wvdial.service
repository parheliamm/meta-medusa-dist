[Unit]
Description=wvdial internet dialer service for stromer m2m
After=gsm.service
Requires=gsm.service
PartOf=gsm.service
Wants=network.target

[Service]
Type=simple
ExecStart=/usr/bin/wvdial
ExecStopPost=/bin/bash -c "/bin/echo -e \"AT+CEER\r\" | /bin/busybox microcom -t 2000 /dev/ttyACM0"
Restart=always
RestartSec=10

[Install]
WantedBy=communication.target
